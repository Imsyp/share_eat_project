<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Page</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <!-- google font link-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hi+Melody&display=swap" rel="stylesheet">
    <style>
        .font {
            font-family: "Hi Melody", sans-serif;
        }
        .popup {
            display: none; /* Hidden by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Black background with opacity */
            justify-content: center;
            align-items: center;
        }
        .popup-content {
            background-color: white; /* White border */
            padding: 20px;
            border-radius: 10px;
            max-width: 800px; /* Maximum width of the popup */
            width: 90%; /* Width relative to the viewport */
            height: auto; /* Adjust height based on content */
            position: relative;
            color: black; /* Text color for better readability */
        }
        .popup-image {
            width: 100%; /* Image width relative to the popup content */
            height: auto; /* Maintain aspect ratio */
            border-radius: 10px;
        }
        #close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 20px;
            cursor: pointer;
            color: black; /* Close button color */
        }
    </style>
</head>
<body>
    <div id="sidebar">
        <div>
            <a href="/"><img src="/images/logo_non_bg.png" alt="Logo" width="250px"></a>
        </div>
        <p><span class="accent font">쉐어 잇</span></p>
        <p><span class="share font">share eat,<br>share it!</span></p>
        <% if (isAuthenticated) { %>
            <a href="/user/mypage">마이 페이지</a>
            <a href="/user/community_board">게시판</a>
            <a href="/user/flash_purchase">공동구매</a>
            <a href="/user/chat/list">채팅</a>
            <a href="/user/logout">로그아웃</a>
        <% } else { %>
            <a href="/user/login">로그인</a>
            <a href="/user/signup">회원가입</a>
        <% } %>
    </div>
    <div id="onlymain">
        <!-- Main content here -->
        <video autoplay muted style="width:auto; height: 100vh; position: fixed;">
            <source src='/images/main3.mp4'></video>
    </div>

    <!-- Popup -->
    <div id="popup" class="popup">
        <div class="popup-content">
            <span id="close-btn">&times;</span>
            <img src="/images/mainpage.jpg" alt="Popup Image" class="popup-image">
            <div>
                <input type="checkbox" id="do-not-show-again">
                <label for="do-not-show-again">다시 표시하지 않음</label>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const popup = document.getElementById('popup');
            const closeBtn = document.getElementById('close-btn');
            const doNotShowAgainCheckbox = document.getElementById('do-not-show-again');

            // Function to get a cookie value by name
            function getCookie(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop().split(';').shift();
            }

            // Function to set a cookie
            function setCookie(name, value, days) {
                const date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                const expires = `expires=${date.toUTCString()}`;
                document.cookie = `${name}=${value}; ${expires}; path=/`;
            }

            // Check if the "do not show again" cookie is set
            if (!getCookie('doNotShowPopup')) {
                // Show the popup if the cookie is not set
                popup.style.display = 'flex';
            }

            // Close the popup and set the cookie if checkbox is checked
            closeBtn.addEventListener('click', function () {
                if (doNotShowAgainCheckbox.checked) {
                    setCookie('doNotShowPopup', 'true', 30); // Set cookie for 30 days
                }
                popup.style.display = 'none';
            });
        });
    </script>
</body>
</html>

